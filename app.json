{
  "expo": {
    "name": "EzStore",
    "slug": "ezstore-react-native",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/adaptive-icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.ezstorereactnative"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.ezstorereactnative"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-font"
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Ứng dụng cần quyền truy cập thư viện ảnh để tải lên đánh giá sản phẩm.",
          "cameraPermission": "Ứng dụng cần quyền truy cập camera để chụp ảnh và quay video đánh giá sản phẩm."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Ứng dụng cần quyền truy cập camera để chụp ảnh và quay video đánh giá sản phẩm."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Ứng dụng cần quyền truy cập thư viện ảnh để tải lên đánh giá sản phẩm.",
          "savePhotosPermission": "Ứng dụng cần quyền lưu ảnh/video vào thư viện của bạn."
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.156623891722-4vnssp7i6340jbsmqqpkojhk9hi09baf"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
